<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>
	<meta charset="utf-8" name="viewpoint" content="width=device-width, initial-scale=1.0">
	<!--add javascript files -->
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/hci-friends.js"></script>
	<!--add css files -->
	<link href=css/bootstrap-theme.css rel="stylesheet">
	<link href=css/bootstrap.css rel="stylesheet">
	<link href=css/hci-friends.css rel="stylesheet">



</head>

<body>
	<div class="container">
		<h1>My HCI Friends</h1><form id="addFriendForm" role="form" method="get" action="/add">
			<!-- list of friends
			<ol>
			{{#each friends}}
				<li><a ref="#friend{{id}}">{{name}}</a></li>
			{{/each}}
			</ol>
			-->

			<ol>
			{{#each friends}}
				<div class="friend" id={{id}}>
					<img src="{{imageURL}}" class="img-rounded" alt="random friend" width="500",height="500">
					<!--<h3><a ref="#friend{{id}}"><a href="#">{{name}}</a></a></h3>
				<h3><a href="{{id}}"><a href="#">{{name}}</a></a></h3> -->
					<a href="#">
						<h4 class="name">{{name}}</h4>
					</a>

					<p>{{description}}</p>
					<hr style="width:50%">
				</div>
			{{/each}}
			</ol>

			<div class="friends">
				<img src="https://thispersondoesnotexist.com/image" alt="random friend" width="500",height="500">
				<h3>Random friend</h3>
				<p>My friend does not exist!</p>
			</div>


			<h3>Add a friend</h3>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
		    </div>

		    <div class="form-group">
		      <label for="description">Description:</label>
		      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
		    </div>
		    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
		</form>
    </div>
</body>
</html>
